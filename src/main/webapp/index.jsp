            text-align: center;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }
        h1 {
            color: #e91e63;
            margin: 20px 0;
        }
        .heart {
            color: #e91e63;
            font-size: 100px;
            margin: 20px 0;
        }
        p {
            font-size: 18px;
            line-height: 1.6;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #e91e63;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: 18px;
        }
        .button:hover {
            background-color: #d81b60;
        }
        .footer {
            margin-top: 40px;
            font-size: 14px;
            color: #777;
        }
